<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@drawable/background">


<!--    Shop Banner-->

    <!--    Shop Name-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.6"
        android:contentDescription="Shop Banner Image"
        android:scaleType="centerCrop"
        android:src="@drawable/banner2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="New York Pizza"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFFFFF"
        android:textAlignment="center"/>


<!--    Filters-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="horizontal"
        android:divider="#B1B1B1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Popular"
            android:textSize="11sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FF3939"
            android:fontFamily=""
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Favorite"
            android:textSize="11sp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/hollow_button"
            android:gravity="center"
            android:textColor="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck"/>

    </LinearLayout>


<!--    Applied Filters-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectedTag"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:layout_marginHorizontal="5dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

<!--    Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:divider="#FFFFFF"
        android:showDividers="middle">


        <!--        Single Item         -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="Example Pizza Name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:fontFamily="sans-serif-light"
                    android:text="Example Pizza Description"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_gravity="center_vertical"
                        android:text="$120"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"/>
                    
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="Popular"
                        android:textSize="11sp"
                        android:textColor="#FF3939"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/hollow_button"
                        android:paddingHorizontal="10dp"
                        android:backgroundTint="#FF3939"/>
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="35"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pizza2"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:text="Example Pizza Name"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:fontFamily="sans-serif-light"
                    android:text="Example Pizza Description"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_gravity="center_vertical"
                        android:text="$120"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="Popular"
                        android:textSize="11sp"
                        android:textColor="#FF3939"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/hollow_button"
                        android:paddingHorizontal="10dp"
                        android:backgroundTint="#FF3939"/>
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="35"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pizza3"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>